  P.PERSONX=*I.PERSONX and
  (I.PERSONX is null or I.IDENTX is null)
go

delete 
  IDENT01
from 
  IDENT01 I, PERSON P  
where 
  P.PERSONX=*I.PERSONX and
  (I.PERSONX is null or I.IDENTX is null)
